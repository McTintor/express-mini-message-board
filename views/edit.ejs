<%- include('navigation.ejs') %>

    <form class="new-message-form" action="/edit/<%=id%>" method="POST">

        <label for="person">User:</label>
        <input type="text" name="person" id="person" value="<%= person %>" required>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="<%= title %>" required>
        <label for="messageText">Message:</label>
        <textarea id="messageText" name="messageText" required><%= text %></textarea>
            <div class="form-buttons">
                <button class="btn" type="button"><a href="/details/<%=id%>">Back</a></button>
                <button class="btn" type="submit">Save Message</button>
            </div>
    </form>
<%- include('footer.ejs') %>
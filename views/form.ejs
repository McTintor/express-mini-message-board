<%- include('navigation.ejs') %>

    <form class="new-message-form" action="/new" method="POST">

        <label for="person">User:</label>
        <input type="text" name="person" id="person" required>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" required>
        <label for="messageText">Message:</label>
        <textarea id="messageText" name="messageText" required placeholder="Type your message here"></textarea>
            <div class="form-buttons">
                <button class="btn" type="button"><a href="/">Back</a></button>
                <button class="btn" type="submit">Add New Message</button>
            </div>
    </form>
